{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/index.py"
        },
        {
            "source": "/sitemap.xml",
            "destination": "public/sitemap.xml"
        },
        {
            "source": "/robots.txt",
            "destination": "public/robots.txt"
        },
        {
            "source": "/.htaccess",
            "destination": "public/.htaccess"
        },
        {
            "source": "/static/(.*)",
            "destination": "public/static/$1"
        },
        {
            "source": "/",
            "destination": "public/static/index.html"
        },
        {
            "source": "/(.*).html",
            "destination": "public/static/$1.html"
        },
        {
            "source": "/(.*)",
            "destination": "public/static/$1"
        }
    ]
}